{
  "name": "quilter",
  "version": "0.2.0",
  "description": "Maps file directory to a Cloudant database",
  "preferGlobal": "true",
  "main": "./lib/index.js",
  "bin": {
    "quilt": "./bin/index.js"
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "npm run build && npm run mocha",
    "jshint": "./node_modules/.bin/jshint src",
    "jscoverage": "./node_modules/.bin/jscoverage src src-cov",
    "mocha": "./node_modules/.bin/mocha test/*",
    "html-cov": "./node_modules/.bin/mocha test/* -R html-cov > coverage.html",
    "lcov": "./node_modules/.bin/mocha test/* -R mocha-lcov-reporter",
    "coveralls": "./node_modules/.bin/mocha test/* -R mocha-lcov-reporter | ./node_modules/coveralls/bin/coveralls.js",
    "build": "npm run jshint && npm run jscoverage",
    "todo": "grep -r TODO src test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:garbados/quilt.js.git"
  },
  "keywords": [
    "couchdb",
    "cloudant",
    "watch",
    "files",
    "sync",
    "replicate",
    "replication",
    "edgewise"
  ],
  "author": "Max Thayer <garbados@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "mocha": "~1.13.0",
    "jshint": "~2.4.4",
    "jscoverage": "~0.3.8",
    "request": "~2.34.0"
  },
  "dependencies": {
    "watch": "~0.8.0",
    "nano": "~4.1.4",
    "async": "~0.2.9",
    "dive": "~0.3.0",
    "underscore": "~1.5.2",
    "mime": "~1.2.11",
    "optimist": "~0.6.0",
    "winston": "~0.7.2",
    "mocha-lcov-reporter": "0.0.1",
    "coveralls": "~2.6.1"
  }
}
